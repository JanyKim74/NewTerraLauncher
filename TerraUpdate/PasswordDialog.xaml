<Window x:Class="Updater.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="비밀번호 입력" 
        Height="600" 
        Width="1100"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- 비밀번호 입력 박스 스타일 -->
        <Style x:Key="PasswordBoxStyle" TargetType="Border">
            <Setter Property="Width" Value="90"/>
            <Setter Property="Height" Value="90"/>
            <Setter Property="Background" Value="#3E3E42"/>
            <Setter Property="BorderBrush" Value="#575e5f"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="10,0"/>
        </Style>
    </Window.Resources>

    <Border Background="#CC000000" 
            BorderBrush="#00CED1" 
            BorderThickness="3" 
            CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 메인 콘텐츠 -->
            <StackPanel Grid.Row="0" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Margin="0,50,0,0">
                
                <!-- 자물쇠 아이콘 -->
                <Viewbox Width="120" Height="120" Margin="0,0,0,40">
                    <Canvas Width="100" Height="100">
                        <!-- 자물쇠 몸체 -->
                        <Rectangle Canvas.Left="25" Canvas.Top="45" 
                                   Width="50" Height="40" 
                                   Fill="#B0E0E6" 
                                   RadiusX="5" RadiusY="5"/>
                        <!-- 자물쇠 고리 -->
                        <Path Data="M 35,45 L 35,30 A 15,15 0 0 1 65,30 L 65,45" 
                              Stroke="#B0E0E6" 
                              StrokeThickness="8" 
                              Fill="Transparent"/>
                        <!-- 열쇠 구멍 -->
                        <Ellipse Canvas.Left="45" Canvas.Top="55" 
                                 Width="10" Height="10" 
                                 Fill="#1E1E1E"/>
                        <Rectangle Canvas.Left="47.5" Canvas.Top="63" 
                                   Width="5" Height="12" 
                                   Fill="#1E1E1E"/>
                    </Canvas>
                </Viewbox>

                <!-- 안내 텍스트 -->
                <TextBlock Text="비밀번호를 입력해주세요" 
                           FontSize="32" 
                           FontWeight="Bold"
                           Foreground="#bbc6c8"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40">
                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="Black" Opacity="0.8"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!-- 비밀번호 입력 영역 (5개의 박스) -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <Border x:Name="PasswordBox1" Style="{StaticResource PasswordBoxStyle}">
                        <TextBlock x:Name="PasswordChar1" 
                                   Text="*" 
                                   FontSize="50" 
                                   FontWeight="Bold"
                                   Foreground="White" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   Visibility="Collapsed"/>
                    </Border>
                    <Border x:Name="PasswordBox2" Style="{StaticResource PasswordBoxStyle}">
                        <TextBlock x:Name="PasswordChar2" 
                                   Text="*" 
                                   FontSize="50" 
                                   FontWeight="Bold"
                                   Foreground="White" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   Visibility="Collapsed"/>
                    </Border>
                    <Border x:Name="PasswordBox3" Style="{StaticResource PasswordBoxStyle}">
                        <TextBlock x:Name="PasswordChar3" 
                                   Text="*" 
                                   FontSize="50" 
                                   FontWeight="Bold"
                                   Foreground="White" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   Visibility="Collapsed"/>
                    </Border>
                    <Border x:Name="PasswordBox4" Style="{StaticResource PasswordBoxStyle}">
                        <TextBlock x:Name="PasswordChar4" 
                                   Text="*" 
                                   FontSize="50" 
                                   FontWeight="Bold"
                                   Foreground="White" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   Visibility="Collapsed"/>
                    </Border>
                    <Border x:Name="PasswordBox5" Style="{StaticResource PasswordBoxStyle}">
                        <TextBlock x:Name="PasswordChar5" 
                                   Text="*" 
                                   FontSize="50" 
                                   FontWeight="Bold"
                                   Foreground="White" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   Visibility="Collapsed"/>
                    </Border>
                </StackPanel>

                <!-- 숨겨진 실제 PasswordBox (키보드 입력 처리용) -->
                <PasswordBox x:Name="HiddenPasswordBox"
                             Width="0" 
                             Height="0"
                             Opacity="0"
                             PasswordChanged="HiddenPasswordBox_PasswordChanged"
                             MaxLength="5"/>

                <!-- 오류 메시지 -->
                <TextBlock x:Name="ErrorMessage"
                           Text=""
                           Foreground="#E81123"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0,30,0,0"
                           TextAlignment="Center"
                           Visibility="Collapsed">
                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="Black" Opacity="0.8"/>
                    </TextBlock.Effect>
                </TextBlock>
            </StackPanel>

            <!-- 하단 버튼 영역 -->
            <Grid Grid.Row="1" Margin="0,0,0,40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 빈 공간 (왼쪽) -->
                <Border Grid.Column="0"/>

                <!-- 저장하기 버튼 -->
                <Border Grid.Column="1"
                        x:Name="SaveButtonBorder"
                        Width="300"
                        Height="90"
                        Background="#00CED1"
                        BorderBrush="#00CED1"
                        BorderThickness="3"
                        CornerRadius="45"
                        Cursor="Hand"
                        MouseEnter="SaveButton_MouseEnter"
                        MouseLeave="SaveButton_MouseLeave"
                        MouseLeftButtonDown="SaveButton_Click">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="0" Color="#00CED1" Opacity="0.6"/>
                    </Border.Effect>
                    
                    <TextBlock Text="저장하기" 
                               FontSize="38" 
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="Black" Opacity="0.8"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Border>

                <!-- 빈 공간 (오른쪽) -->
                <Border Grid.Column="2"/>
            </Grid>
        </Grid>
    </Border>
</Window>
